<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_image_post"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/user_name_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toRightOf="@+id/user_profile_image_post"
        app:layout_constraintTop_toTopOf="@+id/user_profile_image_post"
        />
    <ImageView
        android:id="@+id/post_image_home"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/profile"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/user_profile_image_post"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:id="@+id/post_image_like_btn"
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:src="@drawable/heart_not_clicked"
        app:layout_constraintTop_toBottomOf="@+id/post_image_home"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <ImageView
        android:id="@+id/post_image_comment_btn"
        android:layout_width="40dp"
        android:layout_height="34dp"
        android:src="@drawable/comment"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/post_image_like_btn"
        app:layout_constraintTop_toBottomOf="@+id/post_image_home"
        app:layout_constraintLeft_toRightOf="@+id/post_image_like_btn" />
    <ImageView
        android:id="@+id/post_save_comment_btn"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:src="@drawable/save_unfilled_large_icon"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_image_home"
        />
    <TextView
        android:id="@+id/likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/post_image_like_btn"
        />

    <TextView
        android:id="@+id/publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/likes"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/publisher"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:layout_marginBottom="5dp"
        android:text=""
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        />
</androidx.constraintlayout.widget.ConstraintLayout>