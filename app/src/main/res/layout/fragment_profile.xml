<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pf_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true">
                </TextView>
                <ImageView
                    android:id="@+id/option_view"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/options"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                </ImageView>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout_profile">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/cl_profile"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/pf_profile"
               android:layout_width="120dp"
               android:layout_height="120dp"
               android:src="@drawable/profile"
               app:layout_constraintStart_toStartOf="@id/cl_profile"
               android:layout_margin="10dp"
               app:layout_constraintTop_toTopOf="@id/cl_profile">
           </de.hdodenhof.circleimageview.CircleImageView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_posts"
               android:textColor="@color/black"
               android:text="Posts"
               app:layout_constraintLeft_toRightOf="@id/pf_profile"
               app:layout_constraintTop_toTopOf="@id/pf_profile"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="40dp">
           </TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_posts_count"
               android:text="0"
               android:textColor="@color/black"
               app:layout_constraintLeft_toRightOf="@id/pf_profile"
               app:layout_constraintLeft_toLeftOf="@id/tv_posts"
               app:layout_constraintRight_toRightOf="@id/tv_posts"
               app:layout_constraintTop_toBottomOf="@id/tv_posts">
           </TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_followers"
               android:text="followers"
               android:textColor="@color/black"
               app:layout_constraintLeft_toRightOf="@id/tv_posts"
               app:layout_constraintTop_toTopOf="@id/pf_profile"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="20dp">
           </TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_followers_count"
               android:textColor="@color/black"
               android:text="0"
               app:layout_constraintLeft_toRightOf="@id/pf_profile"
               app:layout_constraintLeft_toLeftOf="@id/tv_followers"
               app:layout_constraintRight_toRightOf="@id/tv_followers"
               app:layout_constraintTop_toBottomOf="@id/tv_followers">
           </TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_following"
               android:text="following"
               android:textColor="@color/black"
               app:layout_constraintLeft_toRightOf="@id/tv_followers"
               app:layout_constraintTop_toTopOf="@id/pf_profile"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="20dp">
           </TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_following_count"
               android:text="0"
               android:textColor="@color/black"
               app:layout_constraintLeft_toRightOf="@id/pf_profile"
               app:layout_constraintLeft_toLeftOf="@id/tv_following"
               app:layout_constraintRight_toRightOf="@id/tv_following"
               app:layout_constraintTop_toBottomOf="@id/tv_following">
           </TextView>
           <Button
               android:id="@+id/edit_account_setting"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Edit Profile"
               android:textColor="@color/black"
               app:layout_constraintTop_toBottomOf="@id/tv_followers_count"
               app:layout_constraintLeft_toLeftOf="@id/tv_followers"
               app:layout_constraintRight_toRightOf="@id/tv_followers"
               android:textAllCaps="false"
               android:layout_marginTop="10dp"></Button>
           <TextView
               android:id="@+id/tv_full_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/pf_profile"
               android:layout_marginLeft="20dp"
               android:textColor="@color/black"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="20dp"
               android:text="Full name">
           </TextView>
           <TextView
               android:id="@+id/tv_bio"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/tv_full_name"
               android:layout_marginLeft="20dp"
               android:textColor="@color/black"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="20dp"
               android:text="Bio">
           </TextView>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="40dp"
               app:layout_constraintTop_toBottomOf="@+id/tv_bio"
               android:orientation="horizontal"
               android:layout_margin="10dp">

               <ImageView
                   android:id="@+id/iv_grid_image"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:scaleType="fitCenter"
                   android:src="@drawable/grid"></ImageView>

               <ImageView
                   android:id="@+id/iv_save_image"
                   android:layout_width="0dp"
                   android:scaleType="fitCenter"
                   android:layout_height="match_parent"
                   android:src="@drawable/save_large_icon"
                   android:layout_weight="1">

               </ImageView>
           </LinearLayout>
       </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>