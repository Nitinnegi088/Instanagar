<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_image_search"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile"
        app:layout_constraintTop_toTopOf="parent">
    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/user_username_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name"
        app:layout_constraintTop_toBottomOf="@+id/user_profile_image_search"
        app:layout_constraintLeft_toLeftOf="@id/user_profile_image_search"
        app:layout_constraintRight_toRightOf="@id/user_profile_image_search"
        android:layout_marginTop="10dp">

    </TextView>
    <TextView
        android:id="@+id/user_profile_username_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user profile name"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/user_username_search"
        app:layout_constraintLeft_toLeftOf="@id/user_username_search"
        app:layout_constraintRight_toRightOf="@id/user_username_search"
        android:layout_marginTop="10dp">

    </TextView>
    <Button
        android:id="@+id/follow_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/user_profile_username_search"
        app:layout_constraintLeft_toLeftOf="@id/user_profile_username_search"
        app:layout_constraintRight_toRightOf="@id/user_profile_username_search"
        android:layout_marginTop="10dp"
        android:text="Follow"
        android:layout_marginBottom="10dp">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>